@using AntiqueMall.Models;

<section id="paint_slider">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 padd">
                @foreach (fsecslide item in ViewBag.slide)
                {
                    <div class="slide" style="background:url(@item.photo)">
                        <div class="text">
                            <h1>@item.title</h1>
                            <p>@item.text</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<section id="faq2">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="foldable">
                    <div class="text">
                        <h3>FAQ</h3>
                        <h1>WE ARE USUALLY ASKED ABOUT</h1>
                    </div>
                  @foreach (Most_given_questions item in ViewBag.question){
                        <h1 class="click_btn">
                            @item.question
                            <i class="fa fa-angle-down down"></i>
                            <i class="fa fa-angle-up up"></i>
                        </h1>
                            <div class="down_page">
                                <p>
                                    @item.answer
                                </p>
                            </div>
                          }
                </div>
            </div>
            <div class="col-md-4">
                <div class="left_side">
                    <div class="text">
                        <h1>DIDN’T FIND THE ANSWER?</h1>
                    </div>
                    <div class="message">
                        <input type="text" placeholder="Name*">
                        <input type="text" placeholder="E-Mail*">
                        <textarea name="text" placeholder="Message*" class="area" cols="30" rows="10"></textarea>
                    </div>
                    <a class="btn btn-success btn-responsive btn_res" href="#">
                        send question
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>