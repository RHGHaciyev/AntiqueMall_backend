            <div class="col-md-10">
                @Html.EditorFor(model => model.shopVintage, new { htmlAttributes = new { @class = "form-control", placeholder = "ShopVintafe" } })
                @Html.ValidationMessageFor(model => model.shopVintage, "", new { @class = "text-danger" })
            </div>
        </div>

