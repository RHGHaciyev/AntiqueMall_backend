@model AntiqueMall.Models.Photo

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<h2><em>Create</em></h2>

@using (Html.BeginForm("Create","Photos",FormMethod.Post,new {enctype="multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4><em>Photo</em></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.photos_path, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.photos_path, new { htmlAttributes = new { @class = "form-control",type="file",name="photos_path" } })
                @Html.ValidationMessageFor(model => model.photos_path, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary btn-block" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2  col-md-3">
                <a href="/Admin/Photos/Index" class="btn btn-primary ">Back to List</a>
            </div>
        </div>
    </div>
}


